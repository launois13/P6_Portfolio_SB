/* Reset CSS */
* {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
	vertical-align: baseline;
}

/* Global styles */
body {
	line-height: 1;
	font-family: 'Work Sans';
	font-size: 14px;
	background-color: #FFFEF8;
}

ol, ul {
	list-style: none;
}

h1, h2 {
	font-family: 'Syne';
	font-weight: 700;
	color: #1D6154;
}

h1 {
	font-size: 22px;
}

h2 {
	font-size: 30px;
}

/* Header */
header {
	display: flex;
	justify-content: space-between;
	margin: 50px 0;
}

header nav ul {
	display: flex;
	align-items: center;
	list-style-type: none;
}

header nav li {
	padding: 0 10px;
	font-size: 1.2em;
}

header nav li:hover {
	color: #B1663C;
}

header nav li a {
	text-decoration: none;
	color: black;
}

header nav li a img{
    width: 22px;
    height: 22px;
}

/* Main content */
main {
	max-width: 1140px;
	margin: auto;
}

/* Introduction section */
#introduction {
	display: flex;
	align-items: center;
	margin-bottom: 139px;
}

#introduction figure {
	flex: 1;
}

#introduction img {
	display: block;
	margin: auto;
	width: 80%;
}

#introduction article {
	flex: 1;
}

#introduction h2 {
	margin-bottom: 1em;
}

#introduction p {
	margin-bottom: 0.5em;
}

/* Portfolio section */
#portfolio h2 {
	text-align: center;
	margin-bottom: 1em;
}

.projects-title {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 1em;
}

.projects-title h2 {
    margin-right: 10px;
}

#open-modal {
    background: none;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    font-size: 14px;
    color: #000;
}

#open-modal img {
    margin-right: 5px;
}

.gallery {
	width: 100%;
	display: grid;
	grid-template-columns: 1fr 1fr 1fr;
	grid-column-gap: 20px;
	grid-row-gap: 20px;
}

.gallery img {
	width: 100%;
}

/* Modal */
#modal {
    position: fixed;
    display: none;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100vw;
    height: 100vh;
    z-index: 1000;
}

.modal-content {
    background-color: #FFFFFF;
    width: 630px;
    max-height: 731px;
    border-radius: 10px;
    padding: 30px;
    text-align: center;
    overflow-y: auto;
    position: relative;
}

.modal-content h2 {
    font-family: 'Work Sans', sans-serif;
    font-size: 26px;
    font-weight: 500;
    color: #000000;
    margin-bottom: 30px;
}

.gallery-modal {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 6px;
    margin-bottom: 67px;
}

.gallery-modal figure {
    position: relative;
}

.gallery-modal img {
    width: 78px;
    height: 104px;
    object-fit: cover;
}

.gallery-modal .fa-trash-can {
    position: absolute;
    top: 6px;
    right: 6px;
    background-color: black;
    color: white;
    padding: 4px;
    font-size: 9px;
    border-radius: 2px;
    cursor: pointer;
}

.separator {
    width: 420px;
    height: 1px;
    background-color: #B3B3B3;
    margin: 0 auto 38px;
}

.button {
    font-family: 'Syne';
    font-weight: 700;
    color: white;
    background-color: #1D6154;
    padding: 10px 20px;
    text-align: center;
    border-radius: 60px;
    cursor: pointer;
    border: none;
    display: block;
    margin: 0 auto;
}

#close-modal {
    position: absolute;
    top: 10px;
    right: 10px;
    background-color: transparent;
    border: none;
    cursor: pointer;
    font-size: 24px;
}

.open-modal {
    display: flex !important;
}

/* Contact form */
#contact {
	width: 50%;
	margin: auto;
}

#contact > * {
	text-align: center;
}

#contact h2 {
	margin-bottom: 20px;
}

#contact form {
	text-align: left;
	margin-top: 30px;
	display: flex;
	flex-direction: column;
}

#contact input {
	height: 50px;
	font-size: 1.2em;
	border: none;
	box-shadow: 0px 4px 14px rgba(0, 0, 0, 0.09);
}

#contact label {
	margin: 2em 0 1em 0;
}

#contact textarea {
	border: none;
	box-shadow: 0px 4px 14px rgba(0, 0, 0, 0.09);
}

input[type="submit"] {
    font-family: 'Syne';
    font-weight: 700;
    color: white;
    background-color: #1D6154;
    margin: 2em auto;
    width: 180px;
    text-align: center;
    border-radius: 60px;
    cursor: pointer;
    padding: 10px 0;
    border: none;
}

input[type="submit"]:hover {
    background-color: #0E2F28;
}

/* Footer */
footer {
    display: flex;
    justify-content: flex-end;
    padding: 22px 0;
    background-color: #fff;
}

footer nav ul li {
    padding-right: 107px;
}

/* Edit mode */
#edit-mode {
    background-color: #000000;
    color: #FFFFFF;
    padding: 10px;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
}

#edit-mode img {
    margin-right: 10px;
}
